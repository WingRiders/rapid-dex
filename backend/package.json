{
  "name": "@wingriders/rapid-dex-backend",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch src/index.ts",
    "dev:aggregator": "MODE=aggregator SERVER_PORT=3301 bun --watch src/index.ts",
    "dev:server": "MODE=server SERVER_PORT=3300 bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "check": "bun biome check . && tsc --noEmit",
    "fix": "bun biome check . --write",
    "prisma:generate": "prisma generate",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:format": "prisma format"
  },
  "dependencies": {
    "@cardano-ogmios/client": "^6.11.2",
    "@meshsdk/core": "^1.9.0-beta.86",
    "@prisma/client": "^6.4.0",
    "@trpc/server": "^11.0.0",
    "@wingriders/rapid-dex-common": "workspace:*",
    "bignumber.js": "^9.1.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "ioredis": "^5.6.0",
    "lodash": "^4.17.21",
    "pino": "^9.6.0",
    "postgres": "^3.4.5",
    "prisma": "^6.4.0",
    "superjson": "^2.2.2",
    "ts-pattern": "^5.6.2",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "@cardano-ogmios/schema": "^6.11.2",
    "@types/bun": "^1.3.1",
    "@types/cors": "^2.8.17",
    "@types/lodash": "^4.14.176",
    "@types/ws": "^8.18.1",
    "pino-pretty": "^13.0.0",
    "type-fest": "^4.39.1",
    "typescript": "^5.7.3"
  }
}
