generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Block {
  slot   Int    @id
  height Int
  hash   String @db.VarChar(64)

  poolOutputs      PoolOutput[]
  spentPoolOutputs PoolOutput[] @relation("SpendBlock")
}

enum ScriptVersion {
  V1
  V2
  V3
}

enum PoolInteractionType {
  Create
  Swap
  AddLiquidity
  WithdrawLiquidity
  WithdrawTreasury
  Donate
}

enum FeeFrom {
  InputToken
  OutputToken
  TokenA
  TokenB
}

model PoolOutput {
  utxoId      String  @id
  spendUtxoId String? @unique

  slot      Int
  spendSlot Int?

  shareAssetName          String
  assetAPolicy            String
  assetAName              String
  assetBPolicy            String
  assetBName              String
  treasuryA               BigInt
  treasuryB               BigInt
  lpts                    BigInt
  qtyA                    BigInt // excluding treasury
  qtyB                    BigInt // excluding treasury
  feeFrom                 FeeFrom
  treasuryAuthorityPolicy String
  treasuryAuthorityName   String
  treasuryFeePointsAToB   Int
  treasuryFeePointsBToA   Int
  swapFeePointsAToB       Int
  swapFeePointsBToA       Int
  feeBasis                Int

  address       String // bech32 encoded
  assets        Json
  coins         BigInt
  datumCBOR     String
  txMetadata    Json?
  scriptCBOR    String?
  scriptVersion ScriptVersion?

  interactionType       PoolInteractionType
  createdByStakeKeyHash String?

  // difference between this pool output and the previous one
  lptsDiff      BigInt
  qtyADiff      BigInt
  qtyBDiff      BigInt
  treasuryADiff BigInt
  treasuryBDiff BigInt

  volumeA       BigInt
  volumeB       BigInt
  outputVolumeA BigInt
  outputVolumeB BigInt

  block              Block       @relation(fields: [slot], references: [slot], onDelete: Cascade)
  spendBlock         Block?      @relation("SpendBlock", fields: [spendSlot], references: [slot], onDelete: SetNull)
  nextPoolOutput     PoolOutput? @relation("SpendPoolOutput", fields: [spendUtxoId], references: [utxoId], onDelete: SetNull)
  previousPoolOutput PoolOutput? @relation("SpendPoolOutput")

  @@index([slot])
  @@index([spendSlot]) // to optimize querying unspent requests
  @@index([shareAssetName]) // to optimize querying detailed data for a pool
}
