{
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "noErrorTruncation": true
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".turbo"]
}
