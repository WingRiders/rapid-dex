  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "@cardano-sdk/core": "^0.45.5",
    "@types/bun": "^1.2.8",
    "@types/lodash": "^4.14.176",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@wingriders/rapid-dex-backend": "workspace:*",
    "tsdown": "^0.16.6",
    "typescript": "^5.7.3"
  }
