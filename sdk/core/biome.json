{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "extends": "//",
  "overrides": [
    {
      "includes": ["scripts/**", "src/cli/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": {
              "level": "off",
              "options": {
                "allow": ["warn", "error"]
              }
            }
          }
        }
      }
    }
  ]
}
